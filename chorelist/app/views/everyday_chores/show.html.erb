<h2>Everyday Chore!</h2>

<%= form_for @everyday_chore do |f| %>
    <%= f.label :name %>: <%= f.text_field :name %><br />
    <%= f.label :assigned_to %>: <%= f.text_field :assigned_to %><br />

    <% @everyday_chore.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <% end %>

    <%= f.submit %>
<% end %>

<div class="footer">
    <%= link_to "Home", root_path %>
</div>

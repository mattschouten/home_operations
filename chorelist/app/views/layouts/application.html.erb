<!DOCTYPE html>
<html>
  <head>
    <title>Family Chore List</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <% if current_user %>
      <header>
        <ul id="nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Today", today_path %></li>
          <% if current_user.role_owner? %>
            <li><%= link_to "Everyday Chores", everyday_chores_path %></li>
          <% end %>
          <li><%= link_to "Log Out #{current_user.email}", destroy_user_session_path, method: :delete %></li>
        </ul>
      </header>
      <%= yield %>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
